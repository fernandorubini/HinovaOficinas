<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Toolbar base do app -->
    <style name="Widget.Hinova.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:gravity">center</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetRight">0dp</item>
    </style>

    <!-- Container do título (logo + texto) -->
    <style name="ToolbarTitle.Container">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:baselineAligned">false</item>
    </style>

    <!-- Logo na toolbar -->
    <style name="ToolbarTitle.Logo">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Texto do título -->
    <style name="ToolbarTitle.Text" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- Fallbacks para referências antigas -->
    <!-- Se algum layout usar @style/ToolbarTitle (sem sufixo), não quebra o build -->
    <style name="ToolbarTitle"/>
    <!-- Se algum layout usar ToolBarTitle.* (B maiúsculo), redireciona para os corretos -->
    <style name="ToolBarTitle.Container" parent="@style/ToolbarTitle.Container"/>
    <style name="ToolBarTitle.Logo" parent="@style/ToolbarTitle.Logo"/>
    <style name="ToolBarTitle.Text" parent="@style/ToolbarTitle.Text"/>

</resources>
